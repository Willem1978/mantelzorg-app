generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String              @id @default(cuid())
  email         String              @unique
  name          String?
  password      String?
  emailVerified DateTime?
  image         String?
  role          UserRole            @default(CAREGIVER)
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  accounts      Account[]
  caregiver     Caregiver?
  magicLinks    MagicLinkToken[]
  orgMember     OrganisationMember?
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MagicLinkToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Caregiver {
  id                        String                  @id @default(cuid())
  userId                    String                  @unique
  dateOfBirth               DateTime?
  phoneNumber               String?
  postalCode                String?
  city                      String?
  careRecipient             String?
  careHoursPerWeek          Int?
  careSince                 DateTime?
  intakeCompleted           Boolean                 @default(false)
  onboardedAt               DateTime?
  createdAt                 DateTime                @default(now())
  updatedAt                 DateTime                @updatedAt
  careRecipientCity         String?
  careRecipientMunicipality String?
  careRecipientName         String?
  careRecipientNeighborhood String?
  careRecipientStreet       String?
  municipality              String?
  neighborhood              String?
  profileCompleted          Boolean                 @default(false)
  street                    String?
  belastbaarheidTests       BelastbaarheidTest[]
  calendarEvents            CalendarEvent[]
  user                      User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  organisationLinks         CaregiverOrganisation[]
  helpRequests              HelpRequest[]
  intakeResponses           IntakeResponse[]
  monthlyCheckIns           MonthlyCheckIn[]
  tasks                     Task[]
}

model IntakeCategory {
  id          String           @id @default(cuid())
  name        String
  description String?
  order       Int              @default(0)
  questions   IntakeQuestion[]
}

model IntakeQuestion {
  id          String           @id @default(cuid())
  categoryId  String
  question    String
  description String?
  type        QuestionType     @default(SCALE)
  options     Json?
  order       Int              @default(0)
  isRequired  Boolean          @default(true)
  category    IntakeCategory   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  responses   IntakeResponse[]
}

model IntakeResponse {
  id          String         @id @default(cuid())
  caregiverId String
  questionId  String
  value       String
  score       Int?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  caregiver   Caregiver      @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
  question    IntakeQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([caregiverId, questionId])
}

model MonthlyCheckIn {
  id                  String    @id @default(cuid())
  caregiverId         String
  month               DateTime
  overallWellbeing    Int?
  physicalHealth      Int?
  emotionalHealth     Int?
  workLifeBalance     Int?
  supportSatisfaction Int?
  highlights          String?
  challenges          String?
  needsHelp           String?
  completedAt         DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  caregiver           Caregiver @relation(fields: [caregiverId], references: [id], onDelete: Cascade)

  @@unique([caregiverId, month])
}

model Task {
  id              String       @id @default(cuid())
  caregiverId     String
  title           String
  description     String?
  category        TaskCategory @default(OTHER)
  priority        TaskPriority @default(MEDIUM)
  status          TaskStatus   @default(TODO)
  dueDate         DateTime?
  completedAt     DateTime?
  isSuggested     Boolean      @default(false)
  suggestedReason String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  caregiver       Caregiver    @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
}

model Resource {
  id          String       @id @default(cuid())
  title       String
  description String
  content     String?
  url         String?
  type        ResourceType
  category    String
  isNational  Boolean      @default(true)
  postalCodes String[]
  city        String?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Organisation {
  id           String                  @id @default(cuid())
  name         String
  description  String?
  logo         String?
  email        String?
  phone        String?
  website      String?
  address      String?
  postalCode   String?
  city         String?
  isActive     Boolean                 @default(true)
  createdAt    DateTime                @default(now())
  updatedAt    DateTime                @updatedAt
  caregivers   CaregiverOrganisation[]
  helpRequests HelpRequest[]
  members      OrganisationMember[]
}

model OrganisationMember {
  id             String        @id @default(cuid())
  userId         String        @unique
  organisationId String
  role           OrgMemberRole @default(MEMBER)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  organisation   Organisation  @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CaregiverOrganisation {
  id             String       @id @default(cuid())
  caregiverId    String
  organisationId String
  shareWellbeing Boolean      @default(true)
  shareNeeds     Boolean      @default(true)
  shareProgress  Boolean      @default(false)
  joinedAt       DateTime     @default(now())
  caregiver      Caregiver    @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
  organisation   Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)

  @@unique([caregiverId, organisationId])
}

model Notification {
  id           String           @id @default(cuid())
  userId       String
  type         NotificationType
  title        String
  message      String
  link         String?
  isRead       Boolean          @default(false)
  readAt       DateTime?
  scheduledFor DateTime?
  sentAt       DateTime?
  createdAt    DateTime         @default(now())
}

model HelpRequest {
  id             String        @id @default(cuid())
  caregiverId    String
  title          String
  description    String
  category       HelpCategory
  urgency        HelpUrgency   @default(NORMAL)
  status         HelpStatus    @default(OPEN)
  organisationId String?
  response       String?
  respondedBy    String?
  respondedAt    DateTime?
  resolvedAt     DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  caregiver      Caregiver     @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
  organisation   Organisation? @relation(fields: [organisationId], references: [id])
}

model CalendarEvent {
  id              String    @id @default(cuid())
  caregiverId     String
  title           String
  description     String?
  location        String?
  startTime       DateTime
  endTime         DateTime?
  isAllDay        Boolean   @default(false)
  isRecurring     Boolean   @default(false)
  recurrenceRule  String?
  eventType       EventType @default(OTHER)
  reminderMinutes Int?
  color           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  caregiver       Caregiver @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}

model BelastbaarheidTest {
  id                   String                   @id @default(cuid())
  caregiverId          String?
  voornaam             String
  email                String
  postcode             String?
  huisnummer           String?
  straat               String?
  woonplaats           String?
  gemeente             String?
  totaleBelastingScore Int                      @default(0)
  belastingNiveau      BelastingNiveau          @default(LAAG)
  totaleZorguren       Int                      @default(0)
  isCompleted          Boolean                  @default(false)
  completedAt          DateTime?
  createdAt            DateTime                 @default(now())
  updatedAt            DateTime                 @updatedAt
  alarmLogs            AlarmLog[]
  antwoorden           BelastbaarheidAntwoord[]
  rapporten            BelastbaarheidRapport[]
  caregiver            Caregiver?               @relation(fields: [caregiverId], references: [id])
  taakSelecties        ZorgtaakSelectie[]
}

model BelastbaarheidAntwoord {
  id         String             @id @default(cuid())
  testId     String
  vraagId    String
  vraagTekst String
  antwoord   String
  score      Int
  gewicht    Float              @default(1.0)
  createdAt  DateTime           @default(now())
  test       BelastbaarheidTest @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@unique([testId, vraagId])
}

model ZorgtaakSelectie {
  id             String             @id @default(cuid())
  testId         String
  taakId         String
  taakNaam       String
  isGeselecteerd Boolean            @default(false)
  urenPerWeek    Int?
  moeilijkheid   Moeilijkheid?
  createdAt      DateTime           @default(now())
  test           BelastbaarheidTest @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@unique([testId, taakId])
}

model Zorgorganisatie {
  id                    String              @id @default(cuid())
  naam                  String
  beschrijving          String?
  type                  ZorgorganisatieType
  telefoon              String?
  email                 String?
  website               String?
  adres                 String?
  postcode              String?
  woonplaats            String?
  gemeente              String?
  isActief              Boolean             @default(true)
  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt
  openingstijden        String?
  zichtbaarBijGemiddeld Boolean             @default(false)
  zichtbaarBijHoog      Boolean             @default(true)
  zichtbaarBijLaag      Boolean             @default(false)
  aanmeldprocedure      String?
  dienst                String?
  doelgroep             String?
  kosten                String?
  locatieOmschrijving   String?
  onderdeelTest         String?
  soortHulp             String?
  voorwaarden           String?
}

model BelastbaarheidRapport {
  id              String             @id @default(cuid())
  testId          String
  samenvatting    String
  aandachtspunten Json
  aanbevelingen   Json
  lokaleHulp      Json
  pdfUrl          String?
  createdAt       DateTime           @default(now())
  test            BelastbaarheidTest @relation(fields: [testId], references: [id], onDelete: Cascade)
}

model AlarmLog {
  id              String             @id @default(cuid())
  testId          String
  type            AlarmType
  beschrijving    String
  urgentie        AlarmUrgentie      @default(MEDIUM)
  isAfgehandeld   Boolean            @default(false)
  afgehandeldOp   DateTime?
  afgehandeldDoor String?
  notitie         String?
  createdAt       DateTime           @default(now())
  test            BelastbaarheidTest @relation(fields: [testId], references: [id], onDelete: Cascade)
}

enum UserRole {
  CAREGIVER
  ORG_MEMBER
  ORG_ADMIN
  ADMIN
}

enum QuestionType {
  SCALE
  MULTIPLE_CHOICE
  YES_NO
  TEXT
}

enum TaskCategory {
  SELF_CARE
  ADMINISTRATION
  APPOINTMENTS
  SOCIAL
  HEALTH
  OTHER
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum ResourceType {
  ARTICLE
  LOCAL_SERVICE
  NATIONAL_SERVICE
  TIP
  VIDEO
  TOOL
}

enum OrgMemberRole {
  MEMBER
  ADMIN
}

enum NotificationType {
  CHECK_IN_REMINDER
  TASK_REMINDER
  HELP_REQUEST_UPDATE
  TIP
  SYSTEM
}

enum HelpCategory {
  RESPITE_CARE
  EMOTIONAL_SUPPORT
  PRACTICAL_HELP
  FINANCIAL_ADVICE
  INFORMATION
  OTHER
}

enum HelpUrgency {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum HelpStatus {
  OPEN
  IN_PROGRESS
  RESPONDED
  RESOLVED
  CLOSED
}

enum EventType {
  CARE_TASK
  APPOINTMENT
  SELF_CARE
  SOCIAL
  WORK
  OTHER
}

enum BelastingNiveau {
  LAAG
  GEMIDDELD
  HOOG
}

enum Moeilijkheid {
  MAKKELIJK
  GEMIDDELD
  MOEILIJK
  ZEER_MOEILIJK
}

enum ZorgorganisatieType {
  GEMEENTE
  THUISZORG
  MANTELZORGSTEUNPUNT
  RESPIJTZORG
  DAGBESTEDING
  HUISARTS
  SOCIAAL_WIJKTEAM
  VRIJWILLIGERS
  OVERIG
  LANDELIJK
}

enum AlarmType {
  HOGE_BELASTING
  KRITIEKE_COMBINATIE
  VEEL_ZORGUREN
  EMOTIONELE_NOOD
  SOCIAAL_ISOLEMENT
  FYSIEKE_KLACHTEN
}

enum AlarmUrgentie {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}
