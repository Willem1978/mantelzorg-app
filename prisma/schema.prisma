generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String              @id @default(cuid())
  email          String              @unique
  name           String?
  password       String?
  emailVerified  DateTime?
  image          String?
  role           UserRole            @default(CAREGIVER)
  gemeenteNaam   String?             // Alleen voor GEMEENTE_ADMIN: naam van de gemeente
  gemeenteRollen String[]            // Sub-rollen binnen gemeente: COMMUNICATIE, HULPBRONNEN, BELEID
  isActive       Boolean             @default(true)
  adminNotities  String?
  sessionVersion Int                 @default(1) // Incrementeert bij elke login om oude sessies te invalideren
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  accounts       Account[]
  caregiver      Caregiver?
  mantelBuddy    MantelBuddy?
  magicLinks     MagicLinkToken[]
  orgMember      OrganisationMember?
  sessions       Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model InviteToken {
  id        String    @id @default(cuid())
  email     String
  token     String    @unique
  gemeenteNaam String?
  gemeenteRollen String[]
  invitedBy String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
}

model MagicLinkToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Caregiver {
  id                        String                  @id @default(cuid())
  userId                    String                  @unique
  dateOfBirth               DateTime?
  phoneNumber               String?
  postalCode                String?
  city                      String?
  careRecipient             String?
  careHoursPerWeek          Int?
  careSince                 DateTime?
  intakeCompleted           Boolean                 @default(false)
  onboardedAt               DateTime?
  createdAt                 DateTime                @default(now())
  updatedAt                 DateTime                @updatedAt
  careRecipientCity         String?
  careRecipientMunicipality String?
  careRecipientName         String?
  careRecipientNeighborhood String?
  careRecipientStreet       String?
  municipality              String?
  neighborhood              String?
  profileCompleted          Boolean                 @default(false)
  street                    String?
  gelezenNieuws             Json?                   // Array van gelezen gemeente-nieuws IDs
  belastbaarheidTests       BelastbaarheidTest[]
  calendarEvents            CalendarEvent[]
  user                      User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  organisationLinks         CaregiverOrganisation[]
  helpRequests              HelpRequest[]
  intakeResponses           IntakeResponse[]
  monthlyCheckIns           MonthlyCheckIn[]
  tasks                     Task[]
  // MantelBuddy relaties
  buddyMatches              BuddyMatch[]
  uitgezetteTaken           BuddyTaak[]
  gegevenBeoordelingen      BuddyBeoordeling[]
  // Favorieten
  favorieten                Favoriet[]
}

model IntakeCategory {
  id          String           @id @default(cuid())
  name        String
  description String?
  order       Int              @default(0)
  questions   IntakeQuestion[]
}

model IntakeQuestion {
  id          String           @id @default(cuid())
  categoryId  String
  question    String
  description String?
  type        QuestionType     @default(SCALE)
  options     Json?
  order       Int              @default(0)
  isRequired  Boolean          @default(true)
  category    IntakeCategory   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  responses   IntakeResponse[]
}

model IntakeResponse {
  id          String         @id @default(cuid())
  caregiverId String
  questionId  String
  value       String
  score       Int?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  caregiver   Caregiver      @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
  question    IntakeQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([caregiverId, questionId])
}

model MonthlyCheckIn {
  id                  String    @id @default(cuid())
  caregiverId         String
  month               DateTime
  overallWellbeing    Int?
  physicalHealth      Int?
  emotionalHealth     Int?
  workLifeBalance     Int?
  supportSatisfaction Int?
  highlights          String?
  challenges          String?
  needsHelp           String?
  completedAt         DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  caregiver           Caregiver @relation(fields: [caregiverId], references: [id], onDelete: Cascade)

  @@unique([caregiverId, month])
}

model Task {
  id              String       @id @default(cuid())
  caregiverId     String
  title           String
  description     String?
  category        TaskCategory @default(OTHER)
  priority        TaskPriority @default(MEDIUM)
  status          TaskStatus   @default(TODO)
  dueDate         DateTime?
  completedAt     DateTime?
  isSuggested     Boolean      @default(false)
  suggestedReason String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  caregiver       Caregiver    @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
}

model Resource {
  id          String       @id @default(cuid())
  title       String
  description String
  content     String?
  url         String?
  type        ResourceType
  category    String
  isNational  Boolean      @default(true)
  postalCodes String[]
  city        String?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Organisation {
  id           String                  @id @default(cuid())
  name         String
  description  String?
  logo         String?
  email        String?
  phone        String?
  website      String?
  address      String?
  postalCode   String?
  city         String?
  isActive     Boolean                 @default(true)
  createdAt    DateTime                @default(now())
  updatedAt    DateTime                @updatedAt
  caregivers   CaregiverOrganisation[]
  helpRequests HelpRequest[]
  members      OrganisationMember[]
}

model OrganisationMember {
  id             String        @id @default(cuid())
  userId         String        @unique
  organisationId String
  role           OrgMemberRole @default(MEMBER)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  organisation   Organisation  @relation(fields: [organisationId], references: [id], onDelete: Cascade)
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CaregiverOrganisation {
  id             String       @id @default(cuid())
  caregiverId    String
  organisationId String
  shareWellbeing Boolean      @default(true)
  shareNeeds     Boolean      @default(true)
  shareProgress  Boolean      @default(false)
  joinedAt       DateTime     @default(now())
  caregiver      Caregiver    @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
  organisation   Organisation @relation(fields: [organisationId], references: [id], onDelete: Cascade)

  @@unique([caregiverId, organisationId])
}

model Notification {
  id           String           @id @default(cuid())
  userId       String
  type         NotificationType
  title        String
  message      String
  link         String?
  isRead       Boolean          @default(false)
  readAt       DateTime?
  scheduledFor DateTime?
  sentAt       DateTime?
  createdAt    DateTime         @default(now())

  @@index([userId])
  @@index([userId, isRead])
}

model HelpRequest {
  id             String        @id @default(cuid())
  caregiverId    String
  title          String
  description    String
  category       HelpCategory
  urgency        HelpUrgency   @default(NORMAL)
  status         HelpStatus    @default(OPEN)
  organisationId String?
  response       String?
  respondedBy    String?
  respondedAt    DateTime?
  resolvedAt     DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  caregiver      Caregiver     @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
  organisation   Organisation? @relation(fields: [organisationId], references: [id])

  @@index([caregiverId])
}

model CalendarEvent {
  id              String    @id @default(cuid())
  caregiverId     String
  title           String
  description     String?
  location        String?
  startTime       DateTime
  endTime         DateTime?
  isAllDay        Boolean   @default(false)
  isRecurring     Boolean   @default(false)
  recurrenceRule  String?
  eventType       EventType @default(OTHER)
  reminderMinutes Int?
  color           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  caregiver       Caregiver @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}

model BelastbaarheidTest {
  id                   String                   @id @default(cuid())
  caregiverId          String?
  voornaam             String
  email                String
  postcode             String?
  huisnummer           String?
  straat               String?
  woonplaats           String?
  gemeente             String?
  totaleBelastingScore Int                      @default(0)
  belastingNiveau      BelastingNiveau          @default(LAAG)
  totaleZorguren       Int                      @default(0)
  isCompleted          Boolean                  @default(false)
  completedAt          DateTime?
  createdAt            DateTime                 @default(now())
  updatedAt            DateTime                 @updatedAt
  alarmLogs            AlarmLog[]
  antwoorden           BelastbaarheidAntwoord[]
  rapporten            BelastbaarheidRapport[]
  caregiver            Caregiver?               @relation(fields: [caregiverId], references: [id])
  taakSelecties        ZorgtaakSelectie[]

  @@index([caregiverId])
}

model BelastbaarheidAntwoord {
  id         String             @id @default(cuid())
  testId     String
  vraagId    String
  vraagTekst String
  antwoord   String
  score      Int
  gewicht    Float              @default(1.0)
  createdAt  DateTime           @default(now())
  test       BelastbaarheidTest @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@unique([testId, vraagId])
}

model ZorgtaakSelectie {
  id             String             @id @default(cuid())
  testId         String
  taakId         String
  taakNaam       String
  isGeselecteerd Boolean            @default(false)
  urenPerWeek    Int?
  moeilijkheid   Moeilijkheid?
  createdAt      DateTime           @default(now())
  test           BelastbaarheidTest @relation(fields: [testId], references: [id], onDelete: Cascade)

  @@unique([testId, taakId])
}

model Zorgorganisatie {
  id                    String              @id @default(cuid())
  naam                  String
  beschrijving          String?
  type                  ZorgorganisatieType
  telefoon              String?
  email                 String?
  website               String?
  adres                 String?
  postcode              String?
  woonplaats            String?             // Vestigingsplaats van de organisatie
  gemeente              String?             // Dekkingsgebied gemeente (null bij landelijk/provincie)
  provincie             String?             // Dekkingsgebied provincie
  dekkingNiveau         String              @default("GEMEENTE") // LANDELIJK, PROVINCIE, GEMEENTE, WOONPLAATS, WIJK
  dekkingWoonplaatsen   Json?               // Array van woonplaatsen binnen gemeente (null = hele gemeente)
  dekkingWijken         Json?               // Array van wijknamen binnen gemeente (null = hele gemeente)
  isActief              Boolean             @default(true)
  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt
  openingstijden        String?
  zichtbaarBijGemiddeld Boolean             @default(false)
  zichtbaarBijHoog      Boolean             @default(true)
  zichtbaarBijLaag      Boolean             @default(false)
  aanmeldprocedure      String?
  dienst                String?
  doelgroep             String?
  kosten                String?
  locatieOmschrijving   String?
  onderdeelTest         String?             // Categorie: Persoonlijke verzorging, Ondersteuning, Vervangende mantelzorg, etc.
  soortHulp             String?
  voorwaarden           String?
  verschijntIn          String[]            // Array van plekken waar dit item verschijnt (voor cross-referencing)
  routeLabel            String?             // Wet/route label: Wmo, Zvw, Wlz (voor display op hulpkaarten)
  bronLabel             String?             // Bronlabel: Landelijk, Gemeente, Zvw, Wlz, Overig
  zorgverzekeraar       Boolean             @default(false) // Tag: valt onder zorgverzekeraar

  @@index([isActief, gemeente])
  @@index([isActief, onderdeelTest])
  @@index([gemeente])
}

model BelastbaarheidRapport {
  id              String             @id @default(cuid())
  testId          String
  samenvatting    String
  aandachtspunten Json
  aanbevelingen   Json
  lokaleHulp      Json
  pdfUrl          String?
  createdAt       DateTime           @default(now())
  test            BelastbaarheidTest @relation(fields: [testId], references: [id], onDelete: Cascade)
}

model AlarmLog {
  id              String             @id @default(cuid())
  testId          String
  type            AlarmType
  beschrijving    String
  urgentie        AlarmUrgentie      @default(MEDIUM)
  isAfgehandeld   Boolean            @default(false)
  afgehandeldOp   DateTime?
  afgehandeldDoor String?
  notitie         String?
  createdAt       DateTime           @default(now())
  test            BelastbaarheidTest @relation(fields: [testId], references: [id], onDelete: Cascade)
}

// ============================================
// ARTIKELEN & CONTENT MANAGEMENT
// ============================================

model Artikel {
  id              String          @id @default(cuid())
  titel           String
  beschrijving    String
  inhoud          String?         // Rich text inhoud (optioneel, voor uitgebreide artikelen)
  url             String?         // Externe link
  bron            String?         // Bronnaam (bijv. "MantelzorgNL")
  emoji           String?
  categorie       String          // Slug: praktische-tips, zelfzorg, rechten, financieel, hulpmiddelen-producten
  subHoofdstuk    String?         // Sub-chapter slug binnen categorie (bijv. "dagelijks-organiseren", "overbelasting-herkennen")
  type            ArtikelType     @default(ARTIKEL)
  status          ArtikelStatus   @default(CONCEPT)
  belastingNiveau BelastingNiveauFilter @default(ALLE)
  bronLabel       String?         // Bronlabel: Landelijk, Gemeente (Wmo), Zorgverzekeraar (Zvw), Wlz, Overig
  gemeente        String?         // Alleen voor gemeente-nieuws
  publicatieDatum DateTime?
  sorteerVolgorde Int             @default(0)
  isActief        Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  aangemaaaktDoor String?         // User ID van de maker

  @@index([categorie, isActief])
  @@index([type, isActief])
  @@index([gemeente])
  @@index([subHoofdstuk])
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  actie       String   // CREATE, UPDATE, DELETE, LOGIN, etc.
  entiteit    String   // User, Artikel, Zorgorganisatie, etc.
  entiteitId  String?
  details     Json?    // Extra informatie over de wijziging
  ipAdres     String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([entiteit, entiteitId])
  @@index([createdAt])
}

// ============================================
// FAVORIETEN
// ============================================

model Favoriet {
  id            String       @id @default(cuid())
  caregiverId   String
  type          FavorietType
  itemId        String       // Uniek ID: voor HULP = slug van naam+gemeente, voor INFORMATIE = categorie-id
  titel         String
  beschrijving  String?
  categorie     String?      // Groepering (bijv. "Persoonlijke verzorging", "Praktische tips")
  url           String?
  telefoon      String?
  icon          String?      // Emoji icoon
  isVoltooid    Boolean      @default(false)
  voltooitOp    DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  caregiver     Caregiver    @relation(fields: [caregiverId], references: [id], onDelete: Cascade)

  @@unique([caregiverId, type, itemId])
  @@index([caregiverId])
}

// ============================================
// MANTELBUDDY VRIJWILLIGERS
// ============================================

model MantelBuddy {
  id                String              @id @default(cuid())

  // Persoonlijke gegevens
  voornaam          String
  achternaam        String
  email             String              @unique
  telefoon          String
  postcode          String
  woonplaats        String

  // Wat wil de buddy doen
  hulpvormen        String[]            // gesprek, boodschappen, vervoer, klusjes, oppas, administratie
  beschikbaarheid   BuddyBeschikbaarheid @default(BEIDE)
  motivatie         String?
  ervaring          String?

  // Status & verificatie
  status            BuddyStatus         @default(AANGEMELD)
  vogGoedgekeurd    Boolean             @default(false)
  trainingVoltooid  Boolean             @default(false)
  isActief          Boolean             @default(false)

  // Scores & beoordelingen
  gemiddeldeScore   Float               @default(0)
  aantalBeoordelingen Int               @default(0)
  betrouwbaarheidScore Float            @default(0)
  aantalTakenVoltooid Int               @default(0)
  aantalTakenGeannuleerd Int            @default(0)

  // Relaties
  userId            String?             @unique
  user              User?               @relation(fields: [userId], references: [id])
  matches           BuddyMatch[]
  taakReacties      BuddyTaakReactie[]
  ontvangenBeoordelingen BuddyBeoordeling[] @relation("BeoordeeldeBuddy")
  gegevenBeoordelingen   BuddyBeoordeling[] @relation("BeoordelendePersoon")

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
}

model BuddyMatch {
  id                String              @id @default(cuid())
  buddyId           String
  caregiverId       String

  // Status van de match
  status            MatchStatus         @default(VOORGESTELD)

  // Type match
  isVasteBuddy      Boolean             @default(false)  // vast maatje vs eenmalig

  // Notities
  notities          String?

  // Relaties
  buddy             MantelBuddy         @relation(fields: [buddyId], references: [id], onDelete: Cascade)
  caregiver         Caregiver           @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
  taakReacties      BuddyTaakReactie[]

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@unique([buddyId, caregiverId])
}

model BuddyTaak {
  id                String              @id @default(cuid())
  caregiverId       String

  // Taak details
  titel             String
  beschrijving      String?
  categorie         BuddyTaakCategorie

  // Wanneer
  datum             DateTime?
  tijdstip          String?             // bijv. "ochtend", "middag", "avond"
  isFlexibel        Boolean             @default(true)

  // Status
  status            TaakUitzetStatus    @default(OPEN)

  // Koppeling
  toegewezenAan     String?             // MantelBuddy id

  // Relaties
  caregiver         Caregiver           @relation(fields: [caregiverId], references: [id], onDelete: Cascade)
  reacties          BuddyTaakReactie[]

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
}

model BuddyTaakReactie {
  id                String              @id @default(cuid())
  taakId            String
  buddyId           String
  matchId           String?

  // Status
  status            ReactieStatus       @default(INTERESSE)

  // Bericht van de buddy
  bericht           String?

  // Relaties
  taak              BuddyTaak           @relation(fields: [taakId], references: [id], onDelete: Cascade)
  buddy             MantelBuddy         @relation(fields: [buddyId], references: [id], onDelete: Cascade)
  match             BuddyMatch?         @relation(fields: [matchId], references: [id])

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@unique([taakId, buddyId])
}

model BuddyBeoordeling {
  id                String              @id @default(cuid())

  // Wie beoordeelt wie
  buddyId           String              // De beoordeelde MantelBuddy
  beoordeeldDoorId  String?             // Optioneel: als dit een buddy is die terugkoppelt
  caregiverId       String?             // De mantelzorger die beoordeelt

  // Scores (1-5 sterren)
  algemeenScore     Int                 // Algemene ervaring
  betrouwbaarheidScore Int?             // Kwam op tijd, deed wat afgesproken
  vriendelijkheidScore Int?             // Was vriendelijk en behulpzaam
  kwaliteitScore    Int?                // Kwaliteit van de hulp

  // Feedback
  positieveFeedback String?
  verbeterpunten    String?

  // Zichtbaarheid
  isAnoniem         Boolean             @default(false)
  isZichtbaar       Boolean             @default(true)

  // Relaties
  buddy             MantelBuddy         @relation("BeoordeeldeBuddy", fields: [buddyId], references: [id], onDelete: Cascade)
  beoordeeldDoor    MantelBuddy?        @relation("BeoordelendePersoon", fields: [beoordeeldDoorId], references: [id])
  caregiver         Caregiver?          @relation(fields: [caregiverId], references: [id])

  createdAt         DateTime            @default(now())

  @@index([buddyId])
}

// ============================================
// ENUMS
// ============================================

enum FavorietType {
  HULP        // Hulporganisatie van hulpvragen pagina
  INFORMATIE  // Leren/informatie item van informatie pagina
}

enum BuddyBeschikbaarheid {
  EENMALIG          // Alleen losse taken
  VAST              // Alleen vast maatje
  BEIDE             // Allebei
}

enum BuddyStatus {
  AANGEMELD         // Net aangemeld
  IN_BEHANDELING    // Kennismakingsgesprek gepland
  VOG_AANGEVRAAGD   // VOG in behandeling
  GOEDGEKEURD       // Volledig goedgekeurd, kan matchen
  INACTIEF          // Tijdelijk niet beschikbaar
  AFGEWEZEN         // Aanmelding afgewezen
}

enum MatchStatus {
  VOORGESTELD       // Match voorgesteld aan beide partijen
  BUDDY_AKKOORD     // Buddy heeft geaccepteerd
  CAREGIVER_AKKOORD // Mantelzorger heeft geaccepteerd
  ACTIEF            // Match is actief
  GEPAUZEERD        // Tijdelijk gepauzeerd
  BEEINDIGD         // Match is beëindigd
}

enum BuddyTaakCategorie {
  GESPREK           // Koffiedrinken, luisterend oor
  BOODSCHAPPEN      // Supermarkt, apotheek
  VERVOER           // Naar afspraken rijden
  KLUSJES           // Kleine reparaties, tuin
  OPPAS             // Bij zorgvrager zijn
  ADMINISTRATIE     // Papierwerk, formulieren
  OVERIG            // Anders
}

enum TaakUitzetStatus {
  OPEN              // Taak staat open
  REACTIES          // Er zijn reacties
  TOEGEWEZEN        // Iemand is toegewezen
  VOLTOOID          // Taak is voltooid
  GEANNULEERD       // Taak geannuleerd
}

enum ReactieStatus {
  INTERESSE         // Buddy heeft interesse getoond
  GEACCEPTEERD      // Mantelzorger heeft buddy gekozen
  AFGEWEZEN         // Niet gekozen
  VOLTOOID          // Taak is voltooid door deze buddy
}

enum UserRole {
  CAREGIVER
  BUDDY             // Nieuwe rol voor MantelBuddy vrijwilligers
  ORG_MEMBER
  ORG_ADMIN
  GEMEENTE_ADMIN    // Gemeenteportaal medewerker
  ADMIN
}

enum QuestionType {
  SCALE
  MULTIPLE_CHOICE
  YES_NO
  TEXT
}

enum TaskCategory {
  SELF_CARE
  ADMINISTRATION
  APPOINTMENTS
  SOCIAL
  HEALTH
  OTHER
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum ResourceType {
